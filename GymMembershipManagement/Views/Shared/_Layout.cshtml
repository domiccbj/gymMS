<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Urban GYM - Management</title>
    <link rel="icon" type="image/png" href="~/Images/gym.ico" />


    <!-- CSS datoteke -->
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Nunito.css" />
    <link rel="stylesheet" href="~/css/Navbar-Right-Links-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    



</head>
<body id="page-top">
    <div id="wrapper" class="d-flex">
        <!-- Sidebar -->
        <nav class="navbar align-items-start sidebar sidebar-dark accordion bg-dark p-0 navbar-dark blackside" style="width: 250px; min-height: 100vh;">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
                    <div class="sidebar-brand-icon">
                        <img src="~/Images/UrbanGymFull.jpg" alt="Urban Gym Logo" style="width: 66px; height: 66px;" />
                    </div>

                    <div class="sidebar-brand-text mx-3"><strong>Urban GYM</strong></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="navbar-nav text-light" id="accordionSidebar">
                    <hr class="sidebar-divider my-0">
                    <ul class="navbar-nav text-light" id="accordionSidebar">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt shake-icon"></i><span> Nadzorna ploča</span></a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Members" asp-action="Index"><i class="fas fa-users shake-icon"></i><span> Upravljanje članovima</span></a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Status" asp-action="Index"><i class="fas fa-calendar-alt shake-icon"></i><span> Status članova</span></a></li>
                        @* <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Staff" asp-action="Index"><i class="fas fa-user"></i><span> Upravljanje osobljem</span></a></li> *@
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index"><i class="fas fa-table shake-icon"></i><span> Izvješća</span></a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Logs" asp-action="Index"><i class="fas fa-clipboard shake-icon"></i><span> Evidencija aktivnosti</span></a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt shake-icon"></i>
                                <span> Odjava</span>
                            </a>
                        </li>

                    </ul>

                </ul>
                <div class="text-center d-none d-md-inline">
                    <button class="btn rounded-circle border-0" id="sidebarToggle" type="button"></button>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content-wrapper" class="d-flex flex-column flex-grow-1" style="width: 100%;">
            <div id="content">
                <nav class="navbar navbar-expand bg-light shadow mb-4 topbar static-top navbar-dark position-relative">
                    <div id="particles-nav" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0;"></div>
                    <div class="container-fluid position-relative" style="z-index: 1;">
                        <button class="btn btn-link d-md-none rounded-circle me-3" id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button>
                        <h5 class="mb-0 text-center custom-center">Membership Management System</h5>
                    </div>
                </nav>
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="text-center my-auto">
                        <span>Copyright © Urban GYM 2024</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JS datoteke -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/particles.min.js"></script>
    <script src="~/js/particles.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
